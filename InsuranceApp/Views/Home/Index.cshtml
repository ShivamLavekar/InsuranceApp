<link href="~/css/stylesheet.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">

    <div class="row">
        <div class=" col-md-6 header">
            <img src="~/images/logo.png" alt="Policy Bazaar Logo" class="logo" />
            <h1>Let's find you the Best Insurance</h1>

            <p>50+ insurers with one of the best prices</p>
            <p>Quick, easy & hassle free</p>
        </div>

        <div class="col-md-6" width="500px" hight="500px"> 
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/logo.png" alt="First slide">
                    </div>
                    <div class="carousel-item bg-black">
                        <img class="d-block w-100" src="..." alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/logo.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                   
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    
                </a>
            </div>
        </div>


    </div>
    
   

   
    <div class="products">
        <div class="product">
            <img src="~/images/term-life-insurance.png" alt="Term Life Insurance" />
            <p>Term Life Insurance</p>
        </div>
        <div class="product">
            <i class="fa fa-heart" style="font-size:48px;color:red"></i>
            <p>Health Insurance</p>
        </div>
        <div class="product">
            <img src="~/images/investment-plans.png" alt="Investment Plans" />
            <p>Investment Plans</p>
        </div>
        <!-- Add other products similarly -->
    </div>

    <a class="view-products-button  btn btn-sm">View all products</a>

    <div class="also-buy">
        <h2>Also Buy</h2>
        <div class="also-buy-items">
            <div class="also-buy-item">
                <p>LIC Plans</p>
            </div>
            <div class="also-buy-item">
                <p>Return of Premium</p>
            </div>
            <!-- Add other also-buy items similarly -->
        </div>
    </div>
</div>


